; vim: set syntax=lisp commentstring=;\ %s:

(jbuild_version 1)

(library (
	(name passe_server)
	(flags (:include ../flags))
	(libraries (
		extlib
		passe
		passe_unix
		hex
		mirage-fs-unix
		mirage-clock-unix
		safepass
		mirage-types
		ptime
	))
	(modules (:standard \ main))
	(preprocess (pps (lwt.ppx)))
))

(executable (
	(name main)
	(public_name passe-server)
	(package passe-server)
	(libraries (passe_server))
	(modules (main))
	(flags (:include ../flags))
))
